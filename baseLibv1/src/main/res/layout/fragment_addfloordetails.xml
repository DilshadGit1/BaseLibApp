<?xml version="1.0" encoding="utf-8"?>
<layout

    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/black_trans">
        <LinearLayout
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/employee_edit_back">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/lay_ratetype"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/background_edit">

                        <com.example.municipal.common.CustomSpinner
                            android:id="@+id/spinnerFloortype"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:backgroundTint="@android:color/transparent" />

                        <ImageView
                            android:layout_width="@dimen/_13sdp"
                            android:layout_height="@dimen/_13sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:src="@drawable/dropdown" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/lay_constructntype"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/background_edit">
                        <com.example.municipal.common.CustomSpinner
                            android:id="@+id/spinner_constructiontype"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:backgroundTint="@android:color/transparent" />

                        <ImageView
                            android:layout_width="@dimen/_13sdp"
                            android:layout_height="@dimen/_13sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:src="@drawable/dropdown" />


                    </RelativeLayout>



                    <RelativeLayout
                        android:id="@+id/lay_floorarea"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/background_edit">

                        <com.example.municipal.common.CustomSpinner
                            android:id="@+id/spinner_floorarea"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:backgroundTint="@android:color/transparent" />

                        <ImageView
                            android:layout_width="@dimen/_13sdp"
                            android:layout_height="@dimen/_13sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:src="@drawable/dropdown" />


                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/lay_doe"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/background_edit">

                        <TextView
                            android:id="@+id/aquistion_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:text="Date From :-"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="@dimen/_13sdp"
                            android:fontFamily="@font/montserratregular" />
                        <com.example.municipal.common.CalenderTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_from_date"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_toRightOf="@+id/aquistion_text"
                            android:text="Date Of Accquisition"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13sdp"
                            android:fontFamily="@font/montserratregular"
                            android:textStyle="bold"/>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true">

                            <TextView
                                android:id="@+id/tvdatefrom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:text=""
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="@dimen/_13sdp"
                                android:fontFamily="@font/montserratregular"/>

                            <ImageView
                                android:id="@+id/img_calender"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_toRightOf="@id/tvdatefrom"
                                android:src="@drawable/date" />

                        </RelativeLayout>

                    </RelativeLayout>
                    <TextView
                        android:id="@+id/buildarea_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your build up area should be equal or less then"
                        android:textColor="@color/popup_back"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        />
                    <RelativeLayout
                        android:id="@+id/lay_roadtype_id"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/background_edit">

                        <EditText
                            android:id="@+id/ed_builduparea"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_toRightOf="@+id/tvbuild"
                            android:background="@null"
                            android:fontFamily="@font/montserratregular"
                            android:hint="Enter Build Up Area"
                            android:inputType="numberDecimal"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/lytgrey"
                            android:textSize="@dimen/_13sdp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/lay_residentialtype"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/background_edit">


                        <com.example.municipal.common.CustomSpinner
                            android:id="@+id/spinner_residentialtype"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:backgroundTint="@android:color/transparent" />

                        <ImageView
                            android:layout_width="@dimen/_13sdp"
                            android:layout_height="@dimen/_13sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:src="@drawable/dropdown" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/lay_nonresiusage"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/background_edit">

                        <Spinner
                            android:id="@+id/spinner_nonresiusage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:backgroundTint="@android:color/transparent" />

                        <ImageView
                            android:layout_width="@dimen/_13sdp"
                            android:layout_height="@dimen/_13sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:src="@drawable/dropdown" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/lay_occupancytype"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/background_edit">

                        <com.example.municipal.common.CustomSpinner
                            android:id="@+id/spinner_occupancytype"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:backgroundTint="@android:color/transparent" />

                        <ImageView
                            android:layout_width="@dimen/_13sdp"
                            android:layout_height="@dimen/_13sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:src="@drawable/dropdown" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/lay_doe2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/background_edit">

                        <TextView
                            android:id="@+id/aquistion_text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:text="Date To :-"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="@dimen/_13sdp"
                            android:fontFamily="@font/montserratregular" />
                        <com.example.municipal.common.CalenderTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_date_to"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_toRightOf="@+id/aquistion_text2"
                            android:text="Date Of Accquisition"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13sdp"
                            android:fontFamily="@font/montserratregular"
                            android:textStyle="bold"/>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true">

                            <TextView
                                android:id="@+id/tvdateto"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:text=""
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="@dimen/_13sdp"
                                android:fontFamily="@font/montserratregular"/>

                            <ImageView
                                android:id="@+id/img_calender2"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_toRightOf="@id/tvdateto"
                                android:src="@drawable/date" />
                        </RelativeLayout>
                    </RelativeLayout>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/add_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/alert_button"
                        android:padding="@dimen/_10sdp"
                        android:paddingStart="@dimen/_30sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:paddingEnd="@dimen/_30sdp"
                        android:text="ADD"
                        android:textColor="@color/back6"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        </LinearLayout>
    </RelativeLayout>
</layout>