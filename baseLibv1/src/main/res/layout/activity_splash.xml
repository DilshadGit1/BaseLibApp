<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <LinearLayout
        android:id="@+id/layoutDots"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dots_height"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/dots_margin_bottom"
        android:gravity="center"
        android:orientation="horizontal">

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:orientation="horizontal">


    <RelativeLayout
        android:id="@+id/lay_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_15sdp"
        android:paddingTop="@dimen/_4sdp"
        android:paddingBottom="@dimen/_4sdp"
        android:background="@drawable/mobilenoback"
        android:backgroundTint="#2b4f9b"
       >
        <ImageView
            android:id="@+id/iv_backbtn"
            android:layout_width="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/back_spalsh" />
        <TextView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_toRightOf="@+id/iv_backbtn"
            android:text="Prev"
            android:fontFamily="@font/poppinsregular_400"
            android:textFontWeight="700"
            android:textColor="#5b79bd" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/lay_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mobilenoback"
        android:backgroundTint="#2d54ef"
        android:paddingLeft="@dimen/_15sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingTop="@dimen/_4sdp"
        android:paddingBottom="@dimen/_4sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        >
        <TextView
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="@string/next"
            android:layout_centerVertical="true"
            android:textSize="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_4sdp"
            android:fontFamily="@font/poppinsregular_400"
            android:textFontWeight="700"
            android:textColor="@color/white" />
        <ImageView
            android:id="@+id/iv_nextbtn"
            android:layout_toRightOf="@+id/btn_next"
            android:layout_width="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/next" />
    </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/btn_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="@font/poppinsregular_400"
        android:textFontWeight="700"
        android:textSize="@dimen/_15sdp"
        android:text="@string/skip"
        android:textColor="#4671cd"
        />
    <ImageView
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:id="@+id/iv_next2"
        android:layout_gravity="center"
        android:layout_marginTop="-3dp"
        android:layout_alignRight="@+id/btn_skip"
        android:src="@drawable/next_arrow"/>

    </LinearLayout>

</RelativeLayout>
</layout>