<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_10sdp"
    android:background="@color/white"
    app:tint="@color/black"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    tools:context=".MainActivity2">

    <com.shuhart.stepview.StepView
        android:id="@+id/step_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:sv_typeface="@font/nunito_regular"
        android:layout_marginTop="-5dp"
        style="@style/textViewCustom"
        android:textSize="@dimen/_6sdp"
        android:paddingBottom="@dimen/_5sdp"
        app:sv_selectedCircleColor="@color/lightgrayclr"
        app:sv_selectedTextColor="@color/colorPrimary"
        app:sv_stepLineWidth="1dp"
        app:sv_stepPadding="4dp"
        app:sv_nextTextColor="@color/graph2"
        app:sv_nextStepLineColor="@color/colorPrimary"
        app:sv_doneTextColor="@color/colorPrimary"
        app:sv_textSize="@dimen/_8sdp"
        app:sv_doneCircleColor="@color/graph2"
        app:sv_doneStepLineColor="@color/colorPrimary"
        app:sv_doneCircleRadius="12dp"
        app:sv_selectedCircleRadius="12dp"
        app:sv_selectedStepNumberColor="@color/colorPrimary"
        app:sv_stepViewStyle="@style/StepView"
        app:sv_doneStepMarkColor="@color/colorPrimary"
        app:sv_stepNumberTextSize="@dimen/_10sdp"
        app:sv_animationType="Line"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_35sdp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:textSize="@dimen/_12sdp"
        android:fontFamily="@font/poppinsregular_400"
        android:textFontWeight="700"
        android:layout_marginTop="16dp"
        android:paddingStart="@dimen/_20sdp"
        android:paddingEnd="@dimen/_20sdp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/Next"
        android:background="@drawable/mobilenoback"
        android:textColor="@color/white" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_35sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:textSize="@dimen/_12sdp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/poppinsregular_400"
        android:textFontWeight="700"
        android:layout_marginBottom="16dp"
        android:paddingStart="@dimen/_20sdp"
        android:paddingEnd="@dimen/_20sdp"
        android:text="Prev"
        android:background="@drawable/mobilenoback"
        android:textColor="@color/white" />

    <RelativeLayout
        android:id="@+id/container"
        android:layout_below="@id/step_view"
        android:layout_above="@id/next"
        android:layout_width="match_parent"
        android:layout_height="0dp">


        <include
            android:id="@+id/step1"
            layout="@layout/newassesment_propertydetails_fragment" />

        <include
            android:id="@+id/step2"
            android:visibility="gone"
            layout="@layout/newassesment_ownerdetails_fragment"/>

        <include
            android:id="@+id/step3"
            android:visibility="gone"
            layout="@layout/newassaddressdetail_fragment"/>
        <include
            android:id="@+id/step4"
            android:visibility="gone"
            layout="@layout/newass_floordetails_fragment"/>
        <include
            android:id="@+id/step5"
            android:visibility="gone"
            layout="@layout/fragment_imagedoc_upload"/>
        <include
            android:id="@+id/step6"
            android:visibility="gone"
            layout="@layout/fragment_imagedoc_upload"/>

    </RelativeLayout>

</RelativeLayout>
</layout>