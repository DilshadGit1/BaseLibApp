<?xml version="1.0" encoding="utf-8"?>
<layout>


<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ExpandableListView
        android:id="@+id/property_deatils"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:divider="@drawable/ractangle_pink"
        android:dividerHeight="0.5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ExpandableListView
        android:id="@+id/owner_details"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:divider="@drawable/ractangle_pink"
        android:layout_marginTop="@dimen/_10sdp"
        android:dividerHeight="0.5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/property_deatils" />

    <ExpandableListView
        android:id="@+id/address_details"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:divider="@drawable/ractangle_pink"
        android:dividerHeight="0.5dp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/owner_details" />

    <ExpandableListView
        android:id="@+id/floor_details"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:divider="@drawable/ractangle_pink"
        android:dividerHeight="0.5dp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/address_details" />

    <RelativeLayout
        android:id="@+id/lay_updatelocation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/ractangle_pink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/floor_details">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/cc_montserrat_bold"
            android:text="Update Location"
            android:textColor="@color/black"
            android:textFontWeight="500"
            android:textSize="@dimen/_13sdp" />

        <ImageView
            android:id="@+id/iv_location_tik"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_20sdp"
            android:src="@drawable/ic_baseline_my_location_24"
            android:visibility="gone" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>