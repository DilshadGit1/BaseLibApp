<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res/android">

    <data>
        <import type="com.example.municipal.util.DateTimeUtil"/>
        <variable
            name="myData"
            type="com.example.municipal.model.AutherModel" />
        <variable
            name="serialNumber"
            type="String" />

    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_box"
        android:backgroundTint="@color/white"
        android:padding="@dimen/_5sdp"
        android:layout_margin="@dimen/_5sdp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lay_deatail"
            android:orientation="vertical">
            <include layout="@layout/item_with_twotext_horizontal"
                bind:levelText="@{`Serial Number`}"
                bind:valueText="@{serialNumber}"
                />

            <include layout="@layout/item_with_twotext_horizontal"
                bind:levelText="@{`Category`}"
                bind:valueText="@{myData.name}"

                />
            <include layout="@layout/item_with_twotext_horizontal"
                bind:levelText="@{`Rate`}"
                bind:valueText="@{myData.desc}"

                />

            <include layout="@layout/item_with_twotext_horizontal"
                bind:levelText="@{`Date of Effect`}"
                bind:valueText="@{DateTimeUtil.INSTANCE.getDateOnly(String.valueOf(myData.doe))}"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mobilenoback"
            android:paddingTop="@dimen/_4sdp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/lay_deatail"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:backgroundTint="#f2f3f7"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_17sdp"
                android:id="@+id/iv_view"
                android:layout_gravity="center"
                android:src="@drawable/icons8_eye"/>
            <ImageView
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_13sdp"
                android:id="@+id/iv_edit"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:src="@drawable/update"/>
            <ImageView
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_13sdp"
                android:id="@+id/iv_delete"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:src="@drawable/trash"/>

        </LinearLayout>

    </RelativeLayout>
</layout>
