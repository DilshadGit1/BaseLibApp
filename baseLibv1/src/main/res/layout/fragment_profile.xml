<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <variable
            name="myData"
            type="com.example.municipal.model.User" />
        <import type="com.example.municipal.util.DateTimeUtil"/>

    </data>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:id="@+id/iv_user"
            android:src="@drawable/avatar"
            android:layout_gravity="center"
            app:civ_border_width="@dimen/_1sdp"
            app:civ_border_color="@color/white"/>

    <include
        layout="@layout/item_new_assesment"
        bind:levelText="@{`Name`}"
        bind:valueText="@{myData.name}"
        />
        <include
            layout="@layout/item_new_assesment"
            bind:levelText="@{`Father name`}"
            bind:valueText="@{myData.fatherRpanRhusband}"
            />
        <include
            layout="@layout/item_new_assesment"
            bind:levelText="@{`Gender`}"
            bind:valueText="@{myData.gender}"
            />
        <include
            layout="@layout/item_new_assesment"
            bind:levelText="@{`Mobile no`}"
            bind:valueText="@{myData.mobile}"
            />
        <include
            layout="@layout/item_new_assesment"
            bind:levelText="@{`Email`}"
            bind:valueText="@{myData.email}"
            />
        <include
            layout="@layout/item_new_assesment"
            bind:levelText="@{`DOB`}"
            bind:valueText="@{DateTimeUtil.INSTANCE.getDateOnly(myData.dob)}"
            />

        <include
            layout="@layout/item_new_assesment"
            bind:levelText="@{`Type`}"
            bind:valueText="@{myData.type}"
            />
    </LinearLayout>

</RelativeLayout>
</layout>
