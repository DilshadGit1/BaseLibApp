<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/whiteractangle2"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_15sdp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4.0. Net Payable Amount*"
                    android:fontFamily="@font/cc_montserrat_bold"
                    android:textFontWeight="600"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:gravity="center_vertical"
                android:background="@color/back12">
                <TextView
                    android:id="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4.2. Property Tax"
                    android:fontFamily="@font/cc_montserrat_bold"
                    android:textFontWeight="600"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"/>
                <TextView
                    android:layout_below="@id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cc_montserrat_bold"
                    android:text="PROPERTY TAX(APPLICABLE ONLY FOR ALL PROPERTIES FALLING UNDER CATEGORY OTHER 4.1)"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_7sdp"/>
            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                app:cardCornerRadius="@dimen/_7sdp"
                android:elevation="20dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_ractangle">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3D"
                                android:fontFamily="@font/cc_montserrat_bold"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_marginRight="@dimen/_15sdp"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@color/black"/>

                        </RelativeLayout>
                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"
                            android:background="@color/lytgrey" />
                        <RelativeLayout
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                           android:layout_margin="@dimen/_5sdp"
                            android:layout_gravity="center_vertical">

                            <TextView
                                android:id="@+id/totalproprtytax"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/cc_montserrat_bold"
                                android:gravity="center_horizontal"
                                android:text="Total Property Tax[14F+ Sum of 15D]"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp" />

                        </RelativeLayout>
                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"
                            android:visibility="gone"
                            android:background="@color/lytgrey" />
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            android:layout_marginLeft="@dimen/_5sdp">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_alignParentRight="true">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:fontFamily="@font/cc_montserrat_bold"
                                    android:layout_marginRight="@dimen/_25sdp"
                                    android:textSize="@dimen/_12sdp"
                                    android:textColor="@color/black"/>

                            </RelativeLayout>
                        </RelativeLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/lytgrey"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3C"
                                android:fontFamily="@font/cc_montserrat_bold"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_marginRight="@dimen/_15sdp"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@color/black"/>

                        </RelativeLayout>
                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"
                            android:background="@color/lytgrey" />
                        <RelativeLayout
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_gravity="center_vertical">
                            <TextView
                                android:id="@+id/proprtytxtinwrds"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:fontFamily="@font/cc_montserrat_bold"
                                android:text="Total Property Tax[14F+ Sum of 15D]"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp" />

                        </RelativeLayout>
                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"
                            android:visibility="gone"
                            android:background="@color/lytgrey" />
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:visibility="gone"
                                android:layout_alignParentRight="true">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Undefined"
                                    android:fontFamily="@font/cc_montserrat_bold"
                                    android:gravity="center"
                                    android:textSize="@dimen/_10sdp"
                                    android:textColor="@color/black"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="In Words"
                                    android:fontFamily="@font/cc_montserrat_bold"
                                    android:gravity="center"
                                    android:textSize="@dimen/_8sdp"
                                    android:textColor="@color/black"/>

                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/lytgrey"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_10sdp">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btn_paynow"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_35sdp"
                                android:background="@drawable/mobilenoback"
                                android:paddingLeft="@dimen/_20sdp"
                                android:paddingRight="@dimen/_20sdp"
                                android:text="Pay Now"
                                android:fontFamily="@font/poppinsregular_400"
                                android:visibility="invisible"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12sdp"
                                android:textFontWeight="700" />
                        </RelativeLayout>
                    </RelativeLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </RelativeLayout>
</layout>