<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="myData"
            type="com.example.municipal.model.TradeLicense" />
        <import type="com.example.municipal.util.DateTimeUtil"/>
        <variable
            name="serialNumber"
            type="String" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_box"
        android:backgroundTint="@color/white"
        android:padding="@dimen/_5sdp"
        android:layout_margin="@dimen/_5sdp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lay_deatail"
            android:orientation="vertical">
            <include layout="@layout/item_with_twotext_horizontal"
                bind:levelText="@{`Serial Number`}"
                bind:valueText="@{serialNumber}"
                />
            <include layout="@layout/item_with_twotext_horizontal"
                bind:levelText="@{`Trade License`}"
                bind:valueText="@{myData.uniqueId}"

                />
            <include layout="@layout/item_with_twotext_horizontal"
                bind:levelText="@{`Ownser(s)`}"
                bind:valueText="@{myData.ownerName}"

                />
            <include layout="@layout/item_with_twotext_horizontal"
                bind:levelText="@{`Address`}"
                bind:valueText="@{myData.ref.address.zone.name}"

                />
            <include layout="@layout/item_with_twotext_horizontal"
                bind:levelText="@{`Mobile`}"
                bind:valueText="@{myData.mobileNo}"

                />
            <include layout="@layout/item_with_twotext_horizontal"
                bind:levelText="@{`Zone`}"
                bind:valueText="@{myData.ref.address.zone.name}"

                />
            <include layout="@layout/item_with_twotext_horizontal"
                bind:levelText="@{`Ward`}"
                bind:valueText="@{myData.ref.address.ward.name}"

                />
            <include layout="@layout/item_with_twotext_horizontal"
                bind:levelText="@{`BuiltUpArea`}"
                bind:valueText="@{String.valueOf(myData.builtUpArea)}"

                />
            <include layout="@layout/item_with_twotext_horizontal"
                bind:levelText="@{`Licence Issue date`}"
                bind:valueText="@{DateTimeUtil.INSTANCE.getDateOnly(myData.licenseDate)}"

                />
            <include layout="@layout/item_with_twotext_horizontal"
                bind:levelText="@{`Licence Expire date`}"
                bind:valueText="@{DateTimeUtil.INSTANCE.getDateOnly(myData.licenseExpiryDate)}"

                />
            <include layout="@layout/item_with_twotext_horizontal"
                bind:levelText="@{`Business Type`}"
                bind:valueText="@{myData.ref.tradeLicenseBusinessType.name}"

                />
            <include layout="@layout/item_with_twotext_horizontal"
                bind:levelText="@{`Category Type`}"
                bind:valueText="@{myData.ref.tradeLicenseCategoryType.name}"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mobilenoback"
            android:paddingTop="@dimen/_4sdp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/lay_deatail"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:backgroundTint="#f2f3f7"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_17sdp"
                android:id="@+id/iv_payment"
                android:layout_gravity="center"
                android:src="@drawable/paynow1"/>

            <ImageView
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_13sdp"
                android:id="@+id/iv_eSign"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:src="@drawable/update"/>
            <ImageView
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_13sdp"
                android:id="@+id/iv_edit"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:src="@drawable/update"/>
            <ImageView
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_13sdp"
                android:id="@+id/iv_pdf"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:src="@drawable/icons8_pdf"/>
            <ImageView
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_17sdp"
                android:id="@+id/iv_info"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:src="@drawable/icons8_eye"/>
            <ImageView
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_17sdp"
                android:id="@+id/iv_view"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:src="@drawable/icons8_eye"/>

        </LinearLayout>

    </RelativeLayout>
</layout>
